generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Auth {
  id           String    @id @default(cuid())
  email        String    @unique
  hashpassword String
  saltkey      String
  created_at   DateTime  @default(now())
  twofactors   String?
  Session      Session[]
  User         User[]
  update_at    DateTime?
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  username  String?
  profile   String?
  auth       Auth    @relation(fields: [authId], references: [id], onDelete: Cascade)
  authId      String 
  created_at   DateTime      @default(now())
  update_at    DateTime?
}

model Session {
  id         Int      @id @default(autoincrement())
  auth       Auth    @relation(fields: [authId], references: [id], onDelete: Cascade)
  authId      String
  token       String
  validate_at DateTime @default(now())
}
